---
import Main from "../layouts/Main.astro";

const profilePicture = "https://i.imgur.com/JPGFE75.jpg";
const blogs = await Astro.glob<{
	poster: string;
	title: string;
	subtitle: string;
}>("../pages/blogs/*.md")
---

<Main title="Kamal Acharya">

	<div class="max-w-4xl mx-auto px-4">
		<!-- Profile Card -->
		<div class="max-w-lg mx-auto bg-white shadow-lg rounded-lg py-16 px-10">
			<img class="w-32 h-32 mx-auto rounded-full bg-indigo-200 transition hover:scale-105" src={profilePicture}/>
			<h1 class="sm:text-3xl text-center mt-4">Kamal Acharya</h1>
			<h2 class="text-3xl text-center">Software Developer</h2>
			<h3 class="text-2xl text-center">
				Assistant Lecturer, Software Engineering Department, CST
			</h3>
			<p class="text-center mt-4">
				Helping to create the next generation of enthusiastic software
				developers while doing what I love, developing
			</p>
		</div>

		<!-- Featured Blogs -->
		<section class="my-8 py-12 sm:w-full md:w-3/4 mx-auto ">
			<div class="md:max-w-4xl mx-auto px-2 md:px-10">
				<h2 class="text-3xl font-bold text-gray-900 mb-6">Featured Blogs</h2>
				<section class="sm:space-y-4">
					<ol class="space-y-4 sm:space-y-6">
						{blogs.map((blog) => (
							<li>
								<a href={blog.url} class="hover:underline">
									<h3 class="text-lg font-bold sm:text-xl">
											{blog.frontmatter.title}
									</h3>
								</a>
								</li>
							<li class="text-sm sm:text-base text-gray-500">
									{blog.frontmatter.subtitle}
							</li>
							<hr class="border-gray-300" />
						))}
					</ol>
				</section>
			</div>
		</section>
	</div>
</Main>
